// vim:ft=javascript

ARG_WITH("pdf", "PDFlib support", "no");

if (PHP_PDF != "no") {
    if (CHECK_HEADER_ADD_INCLUDE("pdflib.h", "CFLAGS_PDF", PHP_PDF) &&
		CHECK_LIB("gdi32.lib", "pdf", PHP_PDF) &&
		( CHECK_LIB("pdflib.lib", "pdf", PHP_PDF + "\\Release_mtDLL")
		  || CHECK_LIB("pdflib.lib", "pdf", PHP_PDF)
		)
	)
    {
	AC_DEFINE('HAVE_PDFLIB', 1);
	EXTENSION('pdf', 'pdf.c');
    } else {
	WARNING("PDFlib not enabled; libraries and/or headers not found");
    }
}
